<Window x:Class="VAL.ControlCentreOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="36"
        Height="36"
        MinWidth="34"
        MinHeight="34"
        MaxWidth="64"
        MaxHeight="64"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="False"
        ShowActivated="False">
    <Window.Resources>
        <Style x:Key="LauncherToolTipStyle" TargetType="ToolTip">
            <Setter Property="Background" Value="#F5020A14" />
            <Setter Property="Foreground" Value="#B0EBF5FF" />
            <Setter Property="BorderBrush" Value="#2E78B4F0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="MaxWidth" Value="320" />
            <Setter Property="Placement" Value="Right" />
            <Setter Property="HasDropShadow" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Border CornerRadius="12">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#0FFFFFFF" Offset="0" />
                                            <GradientStop Color="#05FFFFFF" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                <ContentPresenter Margin="{TemplateBinding Padding}"
                                                  TextElement.Foreground="{TemplateBinding Foreground}"
                                                  TextElement.FontSize="{TemplateBinding FontSize}" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="RootGrid"
          Width="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth}"
          Height="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualHeight}">
        <Button x:Name="LauncherButton"
                Width="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth}"
                Height="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualHeight}"
                AutomationProperties.Name="Control Centre"
                Cursor="Hand"
                BorderThickness="0"
                BorderBrush="Transparent"
                Background="Transparent"
                Foreground="#E8F4FF"
                Padding="0"
                Click="LauncherButton_Click"
                PreviewMouseLeftButtonDown="LauncherButton_PreviewMouseLeftButtonDown"
                PreviewMouseMove="LauncherButton_PreviewMouseMove"
                PreviewMouseLeftButtonUp="LauncherButton_PreviewMouseLeftButtonUp"
                PreviewMouseRightButtonUp="LauncherButton_PreviewMouseRightButtonUp"
                FocusVisualStyle="{x:Null}">
            <Button.ToolTip>
                <ToolTip Style="{StaticResource LauncherToolTipStyle}">
                    <TextBlock TextWrapping="Wrap" MaxWidth="320" LineHeight="15">
                        <Run Text="Control Centre" />
                        <LineBreak />
                        <Run Text="Right-click: Toggle layout mode" />
                        <LineBreak />
                        <Run Text="Hotkey: Ctrl+Alt+Shift+L" />
                    </TextBlock>
                </ToolTip>
            </Button.ToolTip>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="LauncherBorder"
                                        CornerRadius="999"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        Background="{TemplateBinding Background}" />
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="LauncherBorder" Property="BorderBrush" Value="Transparent" />
                                        <Setter TargetName="LauncherBorder" Property="Background" Value="Transparent" />
                                        <Setter TargetName="LauncherBorder" Property="Effect" Value="{x:Null}" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="LauncherBorder" Property="BorderBrush" Value="Transparent" />
                                        <Setter TargetName="LauncherBorder" Property="Background" Value="Transparent" />
                                        <Setter TargetName="LauncherBorder" Property="Effect" Value="{x:Null}" />
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter TargetName="LauncherBorder" Property="BorderBrush" Value="Transparent" />
                                        <Setter TargetName="LauncherBorder" Property="Background" Value="Transparent" />
                                        <Setter TargetName="LauncherBorder" Property="Effect" Value="{x:Null}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <Grid x:Name="LauncherGlyphLayer"
              IsHitTestVisible="False"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Image x:Name="LauncherImage"
                   Width="30"
                   Height="30"
                   Stretch="Uniform"
                   Visibility="Collapsed"
                   SnapsToDevicePixels="True"
                   UseLayoutRounding="True"
                   RenderOptions.BitmapScalingMode="Fant" />
            <TextBlock x:Name="LauncherFallbackText"
                       Text="CC"
                       Foreground="{Binding ElementName=LauncherButton, Path=Foreground}"
                       FontSize="9.5"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="Visible" />
        </Grid>

        <Border x:Name="ResizeHandle"
                Width="10"
                Height="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,1,1"
                CornerRadius="2"
                Background="#80A8C8"
                Cursor="SizeNWSE"
                Visibility="Collapsed"
                PreviewMouseLeftButtonDown="ResizeHandle_PreviewMouseLeftButtonDown"
                PreviewMouseMove="ResizeHandle_PreviewMouseMove"
                PreviewMouseLeftButtonUp="ResizeHandle_PreviewMouseLeftButtonUp" />
    </Grid>
</Window>
