<Window x:Class="VAL.CrashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VAL Crash" Height="360" Width="640"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="VAL encountered an unexpected error."
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8" />

        <TextBox Grid.Row="1"
                 Text="{Binding CrashDetails}"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto" />

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Copy Crash Details"
                    Width="150"
                    Margin="0,0,8,0"
                    Command="{Binding CopyCrashDetailsCommand}" />
            <Button Content="Open Logs Folder"
                    Width="140"
                    Margin="0,0,8,0"
                    Command="{Binding OpenLogsFolderCommand}" />
            <Button Content="Close"
                    Width="80"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
