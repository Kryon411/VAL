<Window x:Class="VAL.UI.Truth.TruthHealthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Truth Health"
        Height="620"
        Width="860"
        MinHeight="420"
        MinWidth="560"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        Style="{DynamicResource VALWindowTheme}">
    <Border Style="{StaticResource VAL.ToolWindowOuterBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,6">
                <TextBlock Text="Truth Health" Style="{StaticResource VAL.ToolWindowHeaderText}" />
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{StaticResource VAL.MutedForegroundBrush}"
                           Margin="0,4,0,0" />
            </StackPanel>

            <Separator Grid.Row="1" />

            <TextBox Grid.Row="2"
                     Text="{Binding ReportText, Mode=OneWay}"
                     Style="{StaticResource VAL.ToolWindowReportViewer}" />

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="Refresh"
                        Width="100"
                        Style="{StaticResource VAL.ToolWindowPrimaryButton}"
                        Command="{Binding RefreshCommand}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
