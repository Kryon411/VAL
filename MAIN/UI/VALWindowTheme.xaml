<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="VAL.WindowBackgroundBrush" Color="#F5020A14" />
    <SolidColorBrush x:Key="VAL.TextForegroundBrush" Color="#F5FBFF" />
    <SolidColorBrush x:Key="VAL.MutedForegroundBrush" Color="#B2F5FBFF" />
    <SolidColorBrush x:Key="VAL.AccentBrush" Color="#4EC5FF" />
    <SolidColorBrush x:Key="VAL.SoftBorderBrush" Color="#14FFFFFF" />
    <SolidColorBrush x:Key="VAL.ButtonBackgroundBrush" Color="#0B141D" />
    <SolidColorBrush x:Key="VAL.PrimaryButtonBackgroundBrush" Color="#1E7FB1" />
    <SolidColorBrush x:Key="VAL.PrimaryButtonHoverBrush" Color="#2599D4" />
    <SolidColorBrush x:Key="VAL.PrimaryButtonPressedBrush" Color="#17658C" />
    <SolidColorBrush x:Key="VAL.ButtonHoverBrush" Color="#1F4EC5FF" />
    <SolidColorBrush x:Key="VAL.ButtonPressedBrush" Color="#334EC5FF" />
    <SolidColorBrush x:Key="VAL.TextBoxBackgroundBrush" Color="#F5020A14" />

    <Style x:Key="VAL.FocusVisual" TargetType="{x:Type Control}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Control}">
                    <Rectangle Margin="2"
                               Stroke="{StaticResource VAL.AccentBrush}"
                               StrokeThickness="1"
                               StrokeDashArray="1 2"
                               SnapsToDevicePixels="True" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="VALWindowTheme" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource VAL.WindowBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource VAL.TextForegroundBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="KeyboardNavigation.TabNavigation" Value="Cycle" />
        <Setter Property="KeyboardNavigation.ControlTabNavigation" Value="Cycle" />
    </Style>

    <Style x:Key="VAL.ToolWindowOuterBorder" TargetType="Border">
        <Setter Property="Margin" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="CornerRadius" Value="14" />
        <Setter Property="Background" Value="{StaticResource VAL.WindowBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource VAL.SoftBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style x:Key="VAL.ToolWindowHeaderText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,0,0,6" />
    </Style>

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource VAL.TextForegroundBrush}" />
    </Style>

    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="{StaticResource VAL.TextBoxBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource VAL.TextForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource VAL.SoftBorderBrush}" />
        <Setter Property="CaretBrush" Value="{StaticResource VAL.AccentBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="FontFamily" Value="Cascadia Mono, Consolas" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="FocusVisualStyle" Value="{StaticResource VAL.FocusVisual}" />
    </Style>

    <Style x:Key="VAL.ToolWindowReportViewer" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="LineHeight" Value="18" />
        <Setter Property="Margin" Value="0,10,0,0" />
        <Setter Property="Padding" Value="12" />
    </Style>

    <Style TargetType="{x:Type RichTextBox}">
        <Setter Property="Background" Value="{StaticResource VAL.TextBoxBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource VAL.TextForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource VAL.SoftBorderBrush}" />
        <Setter Property="CaretBrush" Value="{StaticResource VAL.AccentBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="FontFamily" Value="Cascadia Mono, Consolas" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="FocusVisualStyle" Value="{StaticResource VAL.FocusVisual}" />
    </Style>

    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource VAL.ButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource VAL.TextForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource VAL.SoftBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FocusVisualStyle" Value="{StaticResource VAL.FocusVisual}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource VAL.ButtonHoverBrush}" />
                <Setter Property="BorderBrush" Value="{StaticResource VAL.AccentBrush}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource VAL.ButtonPressedBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{StaticResource VAL.MutedForegroundBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="VAL.ToolWindowSecondaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}" />

    <Style x:Key="VAL.ToolWindowPrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource VAL.PrimaryButtonBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource VAL.AccentBrush}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource VAL.PrimaryButtonHoverBrush}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource VAL.PrimaryButtonPressedBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{StaticResource VAL.MutedForegroundBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type ScrollViewer}">
        <Setter Property="Foreground" Value="{StaticResource VAL.TextForegroundBrush}" />
        <Setter Property="Background" Value="{StaticResource VAL.WindowBackgroundBrush}" />
        <Setter Property="FocusVisualStyle" Value="{StaticResource VAL.FocusVisual}" />
    </Style>

    <Style TargetType="{x:Type GroupBox}">
        <Setter Property="Foreground" Value="{StaticResource VAL.TextForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource VAL.SoftBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <Style TargetType="{x:Type Separator}">
        <Setter Property="Background" Value="{StaticResource VAL.SoftBorderBrush}" />
        <Setter Property="Margin" Value="0,10" />
        <Setter Property="Height" Value="1" />
    </Style>
</ResourceDictionary>
