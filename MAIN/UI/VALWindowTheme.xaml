<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="VAL.WindowBackgroundBrush" Color="#F5020A14" />
    <SolidColorBrush x:Key="VAL.TextForegroundBrush" Color="#F5FBFF" />
    <SolidColorBrush x:Key="VAL.MutedForegroundBrush" Color="#B2F5FBFF" />
    <SolidColorBrush x:Key="VAL.AccentBrush" Color="#4EC5FF" />
    <SolidColorBrush x:Key="VAL.SoftBorderBrush" Color="#14FFFFFF" />
    <SolidColorBrush x:Key="VAL.ButtonBackgroundBrush" Color="#0B141D" />
    <SolidColorBrush x:Key="VAL.ButtonHoverBrush" Color="#1F4EC5FF" />
    <SolidColorBrush x:Key="VAL.ButtonPressedBrush" Color="#334EC5FF" />
    <SolidColorBrush x:Key="VAL.TextBoxBackgroundBrush" Color="#F5020A14" />

    <Style x:Key="VALWindowTheme" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource VAL.WindowBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource VAL.TextForegroundBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
    </Style>

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource VAL.TextForegroundBrush}" />
    </Style>

    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="{StaticResource VAL.TextBoxBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource VAL.TextForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource VAL.SoftBorderBrush}" />
        <Setter Property="CaretBrush" Value="{StaticResource VAL.AccentBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="FontFamily" Value="Cascadia Mono, Consolas" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
    </Style>

    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource VAL.ButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource VAL.TextForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource VAL.SoftBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource VAL.ButtonHoverBrush}" />
                <Setter Property="BorderBrush" Value="{StaticResource VAL.AccentBrush}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource VAL.ButtonPressedBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{StaticResource VAL.MutedForegroundBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
