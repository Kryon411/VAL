<Window x:Class="VAL.DiagnosticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VAL Diagnostics"
        Height="620"
        Width="860"
        WindowStartupLocation="CenterOwner"
        Style="{DynamicResource VALWindowTheme}">
    <Border Margin="12"
            Padding="16"
            CornerRadius="14"
            Background="{StaticResource VAL.WindowBackgroundBrush}"
            BorderBrush="{StaticResource VAL.SoftBorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Diagnostics"
                       FontSize="15"
                       FontWeight="SemiBold"
                       Margin="0,0,0,6" />

            <Separator Grid.Row="1" />

            <TextBox Grid.Row="2"
                     Text="{Binding DiagnosticsText, Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     FontSize="12"
                     Margin="0,10,0,0" />

            <StackPanel Grid.Row="3"
                        Margin="0,12,0,0"
                        Orientation="Vertical">
                <WrapPanel Margin="0,0,0,8"
                           HorizontalAlignment="Right">
                    <Button Content="Copy Diagnostics"
                            Width="140"
                            Margin="0,0,8,0"
                            Command="{Binding CopyDiagnosticsCommand}" />
                    <Button Content="Open Logs"
                            Width="110"
                            Margin="0,0,8,0"
                            Command="{Binding OpenLogsFolderCommand}" />
                    <Button Content="Open Data"
                            Width="110"
                            Margin="0,0,8,0"
                            Command="{Binding OpenDataFolderCommand}" />
                    <Button Content="Open Modules"
                            Width="120"
                            Margin="0,0,8,0"
                            Command="{Binding OpenModulesFolderCommand}" />
                    <Button Content="Open Profile"
                            Width="110"
                            Command="{Binding OpenProfileFolderCommand}" />
                </WrapPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
